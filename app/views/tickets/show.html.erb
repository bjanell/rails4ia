<div id="ticket">
  <header>
    <h1><%= @project.name %></h1>
  </header>

  <header>
    <h2><%= @ticket.name %></h2>

    <table id="attributes">
      <tr>
        <th>Author:</th>
        <td><%= @ticket.author.email %></td>
      </tr>
      <tr>
        <th>Created:</th>
        <td><%= time_ago_in_words(@ticket.created_at) %> ago</td>
      </tr>
    </table>
    <ul class="actions">
      <% if policy(@ticket).update? %>
        <li><%= link_to 'Edit Ticket', [:edit, @project, @ticket], class: 'edit' %></li>
      <% end %>
      <% if policy(@ticket).destroy? %>
        <li><%= link_to 'Delete Ticket', [@project, @ticket], method: :delete,
                        data: { confirm: 'Are you sure you want to delete this ticket?' }, class: 'delete' %></li>
      <% end %>
    </ul>
  </header>

  <%= simple_format(@ticket.description) %>

  <% if @ticket.assets.any? %>
    <h4>Attached Files</h4>
    <div class="assets">
      <% @ticket.assets.each do |asset| %>
        <p>
          <%= link_to File.basename(asset.asset.url), asset_path(asset) %>
          (<%= number_to_human_size(asset.asset.size) %>)
        </p>
      <% end %>
    </div>
  <% end %>
</div>
